#!/bin/bash

input="$*"

if [ -z "$input" ]; then  # If no input, print usage message.
  echo "Highlights and copies the contents of a file to the clipboard."
  echo "Usage: hcp <file>"
else
  highlight -O rtf $input --font-size 20 --font 'Sauce Code Pro for Powerline' --style seashell --src-lang ruby | pbcopy
fi
