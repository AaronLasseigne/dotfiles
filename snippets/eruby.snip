snippet if
abbr    if end
  <% if ${1:condition} %>
    ${2}
  <% end %>

snippet ife
abbr    if else end
  <% if ${1:condition} %>
    ${2}
  <% else %>
    ${3}
  <% end %>

snippet er=
abbr    <%= %>
  <%= ${1} %>

snippet er
abbr    <% %>
  <% ${1} %>

snippet end
abbr    <% end %>
  <% end %>

snippet bug
abbr    <% debugger %>
  <% debugger %>
