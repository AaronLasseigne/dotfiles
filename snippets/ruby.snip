include tomdoc.snip

snippet ife
abbr    if else end
  if ${1:condition}
    ${2}
  else
    ${3}
  end

snippet it
abbr    it do end
  it '${1}' do
    ${2}
  end

snippet context
abbr    context do end
  context '${1}' do
    ${2}
  end

snippet describe
abbr    describe do end
  describe '${1}' do
    ${2}
  end
